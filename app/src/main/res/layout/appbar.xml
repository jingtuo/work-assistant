<?xml version="1.0" encoding="utf-8"?>
<!-- 默认样式: ?attr/appBarLayoutStyle Widget.Material3.AppBarLayout  -->
<!-- elevation是0-4dp, 不可以设置, 与属性android:stateListAnimator相关 -->
<!-- liftOnScroll, 默认为true, 当滑动组件滑动之后(scrollY>0), 提升appbar海拔高度 -->
<!-- fitsSystemWindows=true 用于修改状态栏颜色 -->
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:liftOnScroll="false">

    <!-- 默认样式: ?attr/toolbarStyle Widget.Material3.Toolbar -->
    <!-- elevation默认4dp -->
    <!-- app:navigationIcon 修改输入框内的搜索图标 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"/>

</com.google.android.material.appbar.AppBarLayout>